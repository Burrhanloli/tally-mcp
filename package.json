{
  "name": "tally-mcp-server",
  "version": "1.0.0",
  "description": "Tally Prime MCP Server - Tally Prime integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "bunx @modelcontextprotocol/inspector bun src/index.ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "mcp",
    "tally",
    "erp",
    "typescript",
    "bun"
  ],
  "author": "Burhanuddin LOlilwala",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "fast-xml-parser": "^4.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "husky": "^9.1.7",
    "lefthook": "^1.13.4",
    "lint-staged": "^16.2.1",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "ultracite": "5.4.4"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  }
}
